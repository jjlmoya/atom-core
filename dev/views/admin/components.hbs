<div class="og-list-data-display">
    {{#if components }}
        <ul class="ul">
            {{#each components}}
                <li class="dataRow">
                    <div class="data">{{this.slug}}</div>
                    <div class="data">{{this.name}}</div>
                    <div class="data"><a href="{{../this.activePageSlug}}/{{this.id}}">📝</a></div>
                    <form class="data" action="{{../this.activePageSlug}}/{{this.id}}/delete" method="POST">
                        <input type="checkbox" required="required"/>
                        <button>🗑</button>
                    </form>
                </li>
            {{/each}}
        </ul>
    {{/if}}
</div>
{{> components/forms/components/main
        model=this
        formClass="l-column-distribution l-column-distribution--centered ml-basic-form"}}