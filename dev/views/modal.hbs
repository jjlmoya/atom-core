<script>
    (function () {
        var locators = {
                    banner: 'ml-banner-badge',
                    destination: 'm-user-search__destination',
                    date: 'c-icon-calendar',
                    replace: {
                        destination: 'u-replace-destination',
                        date: 'u-replace-date'
                    }
                },
                model = {
                    MonthMap: [
                        "Enero",
                        "Febrero",
                        "Marzo",
                        "Abril",
                        "Mayo",
                        "Junio",
                        "Julio",
                        "Agosto",
                        "Septiembre",
                        "Octubre",
                        "Noviembre",
                        "Diciembre"
                    ]
                },
                removeBanner = function () {
                    document.getElementsByClassName(locators.banner)[0].style = "display:none";
                },
                getDestinationName = function (destination) {
                    return destination[0].innerText;
                },
                getDate = function (date) {
                    var dateArray = date[0].parentElement.innerText.split("/"),
                            monthNumber;
                    if (dateArray.length > 0) {
                        monthNumber = parseInt(dateArray[1]);
                        return model.MonthMap[monthNumber - 1];
                    }
                    return "este mes";
                },
                replaceValues = function (container, value) {
                    var i;
                    for (i = 0; i < container.length; i++) {
                        container[i].innerText = value;
                    }
                },
                replaceDestinationValues = function (destination) {
                    replaceValues(document.getElementsByClassName(locators.replace.destination), destination.trim())
                },
                replaceDateValues = function (date) {
                    replaceValues(document.getElementsByClassName(locators.replace.date), date)
                },
                init = function () {
                    var destinationElement = document.querySelectorAll('.m-user-search__item' + '.' + locators.destination),
                            dateElement = document.querySelectorAll('.m-user-search__item ' + '.' + locators.date);
                    if (destinationElement.length === 1 && dateElement.length === 1) {
                        replaceDestinationValues(getDestinationName(destinationElement));
                        replaceDateValues(getDate(dateElement))
                    } else {
                        removeBanner();
                    }
                };
        init();
    })();
</script>



