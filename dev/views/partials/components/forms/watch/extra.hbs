                        name="extra.hasAltimeter"
                }}
                {{> atoms/input/checkbox
                        label="Alarm"
                        name="extra.hasAlarm"
                }}
                {{> atoms/input/checkbox
                        label="Compass"
                        name="extra.hasCompass"
                }}
                {{> atoms/input/checkbox
                        label="World Time"
                        name="extra.hasWorldTime"
                }}
                {{> atoms/input/checkbox
                        label="Timer"
                        name="extra.hasTimer"
                }}
                {{> atoms/input/checkbox
                        label="Tachymeter"
                        name="extra.tachymeter"
                }}
