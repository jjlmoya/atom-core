<fieldset class="{{formClass}} ml-fieldset">
    <legend>Extras</legend>
    <div class="ml-fieldset-wrapper">
        <div class="ml-field">
            <h2 class="ml-heading">Properties</h2>
            <div class="ml-group">
                {{> atoms/input/checkbox
                        label="Solar Power"
                        name="extra.hasSolarPower"
                }}
                {{> atoms/input/checkbox
                        label="SmartWatch"
                        name="extra.isSmartWatch"
                }}
                {{> atoms/input/checkbox
                        label="Shock Protection"
                        name="extra.hasShockProtection"
                }}
                {{> atoms/input/checkbox
                        label="Special Package"
                        name="extra.hasSpecialPackage"
