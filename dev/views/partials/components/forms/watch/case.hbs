<fieldset class="{{formClass}} ml-fieldset">
    <legend>Case</legend>
    <div class="ml-fieldset-wrapper">
        <div class="ml-field">
            <h2 class="ml-heading">Materials</h2>
            <div class="ml-group">
                {{#each model.materials}}
                    {{> atoms/input/checkbox
                            label=this
                            name="case.material"
                    }}
                {{/each}}
            </div>
        </div>
        <div class="ml-field">
            <h2 class="ml-heading">Coating Color</h2>
            <div class="ml-group">
                {{#each colors}}
                    {{> atoms/input/checkbox
                            label=this
                            name="case.coatingColor"
                    }}
                {{/each}}
            </div>
        </div>
        <div class="ml-field">
            <h2 class="ml-heading">Bezel</h2>
            <div class="ml-group">
                {{> atoms/input/checkbox
                        label="Rotate Bezel"
                        name="case.rotateBezel"
                }}
            </div>
        </div>

        <div class="ml-field">
            <h2 class="ml-heading">Crown</h2>
            <div class="ml-group">
                {{> atoms/input/select
                        options=this.crownTypes
                        label=this
                        name="case.crown.type"
                }}
            </div>
            <div class="ml-group">
                {{> atoms/input/number
                        label="Tama√±o"
                        name="case.crown.size"
                }}
            </div>
        </div>
        <div class="ml-field">
            <h2 class="ml-heading">Back</h2>
            <div class="ml-group">
                {{> atoms/input/select
                        options=this.backCase
                        label="Type"
                        name="case.back.type"
                }}
            </div>
            <div class="ml-group">
                {{> atoms/input/checkbox
                        label="Trasparent"
                        name="case.back.isTransparent"
                }}
            </div>
        </div>
    </div>
</fieldset>